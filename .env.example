# GraphRAG Server Configuration

# GraphRAG API Key
GRAPHRAG_API_KEY=YOUR_API_KEY

# DeepSeek API Key
DEEPSEEK_API_KEY=YOUR_API_KEY

# GraphRAG Directory Settings - Must point to an external directory with successful index creation
GRAPHRAG_ROOT_DIR=YOUR_ROOT_DIR

# Reference Base URL
GRAPHRAG_REFERENCE_BASE_URL=YOUR_REFERENCE_BASE_URL

# Server Port
GRAPHRAG_SERVER_PORT=YOUR_SERVER_PORT

# Optional: Use local models like Ollama
# GRAPHRAG_MODEL_TYPE=ollama
# GRAPHRAG_MODEL_NAME=llama2:latest
# GRAPHRAG_MODEL_BASE_URL=http://localhost:11434/v1

# Controls whether to show references in responses
GRAPHRAG_SHOW_REFERENCES=false